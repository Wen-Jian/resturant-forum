<div class="contain">
	
	<div class="search-bar">
		<%= form_for :search, :url => admin_resturants_path, method: :get do |f| %>
			<%= f.text_field :query, placeholder: "找餐廳或地址", class: "text-field" %>
			<button class="searchbtn btn"><img src="search-icon.png"></button>

		<% end %>
	</div>

	<div id="discount-info" class="carousel slide discount-info" data-ride="carousel">
		
		<ol class="carousel-indicators">
			<li data-target="#discount-info" data-slide-to="0" class="active"></li>
			<li data-target="#discount-info" data-slide-to="1"></li>
			<li data-target="#discount-info" data-slide-to="2"></li>
		</ol>
		<div class="carousel-inner" role="listbox">

			<div class = "item active">
                               
                	<img class="d-block w-100" src="" alt="First slide">
              	
            </div>

            <div class="item">

            	<img class="d-block w-100" src="" alt="second slide">
            	
            </div>

            <div class="item">
            	
            	<img class="d-block w-100" src="" alt="third slide">

            </div>

		</div>



	</div>
	<div class="menu">
		<div class="left col-xs-12 col-sm-7 col-md-7 col-lg-7">
			<div class="tag" id="tag-new">
				<img  src="star_icon.jpg">
				<div class="link">
						
					<%= link_to "最新文章", admin_resturants_path(:filter => "news") %>

				</div>
				
				<div class="show-box" id="newarticles">
		
					
					<button class="scroll-left" id="scroll-left"><</button>
					<button class="scroll-right" id="scroll-right">></button>
					<div class="article-canvas">
													
						<% for i in 0..5 do %>
						<div class="newest">
							<a href= <%= resturant_blog_path(i, i) %>>
														
								<img src="star_icon.jpg">
								<p>article title<%= i %></p>
							
							</a>
						</div>	

						<% end %>						
						
					</div>
					

				</div>
			</div>
			
			<div class="tag" id="tag-hot">
				<img  src="star_icon.jpg">
				<div class="link">
						
					<%= link_to "熱門文章", admin_resturants_path(:filter => "news") %>

				</div>
				
				<div class="show-box" id="hotarticles">
		
					
					<button class="scroll-left-hot" id="scroll-left-hot"><</button>
					<button class="scroll-right-hot" id="scroll-right-hot">></button>
					<div class="article-canvas">
													
						<% for i in 0..5 do %>
						<div class="newest">
							<a href= <%= resturant_blog_path(i, i)%>>
														
								<img src="star_icon.jpg">
								<p>article title<%= i %></p>
							
							</a>
						</div>	

						<% end %>						
						
					</div>
					

				</div>
			</div>

		</div>

		<div class="right col-xs-12 col-sm-5 col-md-5 col-lg-">
			
			<div class="tag">
				<img src="star_icon.jpg">
				<div class="link">
						
					<%= link_to "評價排行", admin_resturants_path(:filter => "eva") %>

				</div>
				
				<div  class="show-box evaluate-show-box" >
					
						
					<% for i in 0..9 do %>

						<div class="eva-rest">
							<a href= <%=resturant_path(i) %>>
							<img src="star_icon.jpg">
							<h3>informations</h3>
							</a>	
							

						</div>

					<% end %>

					

				</div>

		</div>
		

		
	</div>
		
		
	
</div>
<%= link_to "chat", chatroom_path(0) %>